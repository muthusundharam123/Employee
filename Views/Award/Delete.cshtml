@model Employee.Data.Award


<h2>Delete Award</h2>

<h3>Are you sure you want to delete this award?</h3>

<div>
    <h4>Award</h4>
    <hr />
    <div class="row">
        <p class="col-sm-2">
            Award Type
        </p>
        <p class="col-sm-10">
            @Model.AwardType
        </p>
        <p class="col-sm-2">
            Status
        </p>
        <p class="col-sm-10">
            @Model.Status
        </p>
        <p class="col-sm-2">
            Award Date
        </p>
        <p class="col-sm-10">
            @Model.AwardDate.ToShortDateString()
        </p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.AwardId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="" asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
