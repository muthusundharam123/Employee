@model Employee.Data.EmployeeDetails

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Employee</h4>
    <hr />
    <div class="row">
        <p class="col-sm-2">
            Name
        </p>
        <p class="col-sm-10">
            @Model.Name
        </p>
        <p class="col-sm-2">
            Email
        </p>
        <p class="col-sm-10">
            @Model.Email
        </p>
        <p class="col-sm-2">
            Role
        </p>
        <p class="col-sm-10">
            @Model.Role
        </p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.EmployeeId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="" asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
