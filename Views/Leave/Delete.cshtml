@model Employee.Data.Leave


<h2>Delete Leave</h2>

<h3>Are you sure you want to delete this Leave?</h3>

<div>
    <h4>Leave</h4>
    <hr />
    <div class="row">
        <p class="col-sm-2">
            Leave Type
        </p>
        <p class="col-sm-10">
            @Model.LeaveType
        </p>
        <p class="col-sm-2">
            Status
        </p>
        <p class="col-sm-10">
            @Model.Status
        </p>
        <p class="col-sm-2">
            Leave Date
        </p>
        <p class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </p>
        <p class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.LeaveId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="" asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
