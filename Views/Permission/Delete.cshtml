@model Employee.Data.Permission


<h2>Delete Permission</h2>

<h3>Are you sure you want to delete this Permission?</h3>

<div>
    <h4>Permission</h4>
    <hr />
    <div class="row">
        <p class="col-sm-2">
            Permission Type
        </p>
        <p class="col-sm-10">
            @Model.PermissionType
        </p>
        <p class="col-sm-2">
            Status
        </p>
        <p class="col-sm-10">
            @Model.Status
        </p>
        <p class="col-sm-2">
            Permission Date
        </p>
        <p class="col-sm-10">
            @Model.Date.ToShortDateString()
        </p>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.PermissionId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="" asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
